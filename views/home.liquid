<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
      .table {
        display: flex;
        flex-direction: row;
        gap: 50px;
      }
    </style>
  </head>
  <body>
    <h1>Hello world!</h1>
    <form action="/update" method="POST">
      <div class="table">
        <div>
          <h2>Active</h2>
          {% for task in active %}
            <div>
              {{ task.name }}
              <input
                type="submit"
                name="complete_{{task.id}}"
                value="Complete" />
            </div>
          {% endfor %}
        </div>
        <div>
          <h2>Completed</h2>
          {% for task in completed %}
            <div>
              {{ task.name }}
              <input
                type="submit"
                name="delete_{{task.id}}"
                value="Delete" />
            </div>
          {% endfor %}
        </div>
      </div>
    </form>
    <form action="/create" method="POST">
      <input type="text" name="name" />
      <input type="submit" value="Create" />
    </form>
  </body>
</html>